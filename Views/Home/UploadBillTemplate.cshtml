@using DataAccesLayer
@model BillTemplate
@{
    ViewBag.Title = "Template Yükle";
}


<div class="container">

    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">
        @using(Html.BeginForm("UploadBillTemplate", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-md-12" }))
        {
            <div class="form-horizontal">

                <div class="col-md-3">
                    @*<img src="~/images/@Model.TemplatePath" class="img-circle" width="128" height="128" />*@
                    @Html.HiddenFor(model => model.TemplatePath)
                    <br /><br />
                    <input type="file" name="TemplatePath" id="TemplatePath" class="form-control" /><br />

                    <span><i>Lütfen csv formatı kullanın.</i></span>
                    <br />
                </div>

                <div class="col-md-5">

                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                            @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>

                </div>

                <div class="col-md-4">
                    &nbsp;
                </div>
            </div>
        }
    </div>

</div>